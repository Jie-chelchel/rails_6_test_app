<h2 class = "text-center mt-4"><%= @post.title %></h2>

<div class="container">
  <div class="row justify-content-md-center" >
    <div class="col-8 mt-4 ">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
            <strong> Posted By: </strong><%= @post.name %>
        </div>
        <div class="card-body">
            
            <div class="card-text text-left"><%= simple_format(@post.description) %></div>

            <button type="button" class="btn btn-outline-info btn-sm"><%= link_to "Edit", edit_post_path(@post) %></button>
            <button type="button" class="btn btn-outline-danger btn-sm"><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure? "} %></button>  

            </div>
            <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words( @post.created_at) %> ago, edited <%= time_ago_in_words(@post.updated_at) %> ago</small>
            </div>
    </div>
  </div>

</div>





