<h1>All posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan=3 >Actions </th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.name %></td>
      <td><%= link_to "Show", post_path(post.id) %> </td>  
      <td><%= link_to "Edit", edit_post_path(post.id) %> </td>  
      <td><%= link_to "Delete", post_path(post.id), method: :delete, data: {confirm: "Are you sure?"}%> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Create Post", new_post_path %>
<%= link_to "Home Page", root_path %>
