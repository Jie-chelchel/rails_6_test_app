<h1>All posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.name %></td>
      <td><%= link_to "Show", post_path(post.id) %> </td>
      <td><%= link_to "Delete", post_path(post.id), method: :delete %> </td>
    </tr>
  <% end %>
  </tbody>

</table>