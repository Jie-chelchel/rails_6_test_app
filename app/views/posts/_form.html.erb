<div class="container">
  <%= render "shared/errors" %>

  
  <%= form_with(model: @post, local: true, class: "shadow p-3 mb-3 bg-info rounded")  do |f| %>
    <div class="form-group row">
      <%= f.label :title, class:"col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :description, class:"col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10, class:"form-control" %>
      </div>
    </div>
    
    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-large " %>
    </div>


  <% end %>
  <div class="form-group row justify-content-center ">
    <%= link_to "[ Cancel and return to posts listing page ]", posts_path, class: "text-info" %>
  </div>
</div>